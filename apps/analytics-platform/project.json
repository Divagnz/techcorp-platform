{
  "name": "analytics-platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "version": "0.0.1",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/analytics-platform/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/analytics-platform",
        "browser": "apps/analytics-platform/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/analytics-platform/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/analytics-platform/public"
          }
        ],
        "styles": ["apps/analytics-platform/src/styles.scss"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "artifact": {
      "executor": "nx-project-release:artifact",
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "sourceDir": "{workspaceRoot}/dist/apps/analytics-platform",
        "outputDir": "{workspaceRoot}/dist/artifacts/",
        "format": "tgz"
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "analytics-platform:build:production"
        },
        "development": {
          "buildTarget": "analytics-platform:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "analytics-platform:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/analytics-platform/jest.config.ts",
        "tsConfig": "apps/analytics-platform/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "analytics-platform:build",
        "port": 4200,
        "staticFilePath": "dist/apps/analytics-platform/browser",
        "spa": true
      }
    },
    "version": {
      "executor": "nx-project-release:version",
      "options": {
        "versionFiles": ["project.json"],
        "tagNaming": {
          "format": "{projectName}@{version}",
          "prefix": "v",
          "includeProjectName": true
        },
        "bumpDependents": true
      }
    },
    "changelog": {
      "executor": "nx-project-release:changelog"
    },
    "publish": {
      "executor": "nx-project-release:publish",
      "dependsOn": ["build"]
    }
  }
}
