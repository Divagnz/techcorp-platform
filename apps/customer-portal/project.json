{
  "name": "customer-portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "version": "0.0.1",
  "prefix": "app",
  "sourceRoot": "apps/customer-portal/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/customer-portal",
        "browser": "apps/customer-portal/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/customer-portal/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/customer-portal/public"
          }
        ],
        "styles": [
          "apps/customer-portal/src/styles.scss"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "customer-portal:build:production"
        },
        "development": {
          "buildTarget": "customer-portal:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "customer-portal:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/customer-portal/jest.config.ts",
        "tsConfig": "apps/customer-portal/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "customer-portal:build",
        "port": 4200,
        "staticFilePath": "dist/apps/customer-portal/browser",
        "spa": true
      }
    },
    "version": {
      "executor": "nx-project-release:version",
      "options": {
        "versionFiles": [
          "project.json"
        ],
        "tagNaming": {
          "format": "{projectName}@{version}",
          "prefix": "v",
          "includeProjectName": true
        },
        "bumpDependents": true
      }
    },
    "changelog": {
      "executor": "nx-project-release:changelog"
    },
    "publish": {
      "executor": "nx-project-release:publish",
      "dependsOn": [
        "build"
      ]
    }
  }
}
