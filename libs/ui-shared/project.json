{
  "name": "ui-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-shared/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:ng-packagr",
      "outputs": [
        "{workspaceRoot}/dist/libs/ui-shared"
      ],
      "options": {
        "project": "libs/ui-shared/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui-shared/tsconfig.lib.json"
        },
        "development": {
          "tsConfig": "libs/ui-shared/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/ui-shared/jest.config.ts",
        "tsConfig": "libs/ui-shared/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "version": {
      "executor": "nx-project-release:version",
      "options": {
        "versionFiles": [
          "package.json"
        ],
        "tagNaming": {
          "format": "{projectName}@{version}",
          "includeProjectName": true
        },
        "bumpDependents": true
      }
    },
    "changelog": {
      "executor": "nx-project-release:changelog"
    },
    "publish": {
      "executor": "nx-project-release:publish",
      "options": {
        "registryType": "npm",
        "registry": "",
        "access": "public",
        "distTag": "latest"
      },
      "dependsOn": [
        "build",
        "artifact"
      ]
    },
    "artifact": {
      "executor": "nx-project-release:artifact",
      "dependsOn": [
        "build"
      ],
      "options": {
        "sourceDir": "{workspaceRoot}/dist/libs/ui-shared",
        "outputDir": "dist/artifacts",
        "format": "tgz",
        "artifactName": "{projectName}-{version}.tgz"
      },
      "outputs": [
        "{workspaceRoot}/dist/artifacts"
      ]
    },
    "release": {
      "executor": "nx-project-release:release",
      "options": {
        "gitPush": false,
        "createGitHubRelease": false
      }
    }
  }
}
